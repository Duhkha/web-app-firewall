<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .tab {
            display: none;
        }
        .tab.active {
            display: block;
        }
        .tabs-menu {
            display: flex;
            cursor: pointer;
        }
        .tabs-menu div {
            padding: 10px 20px;
            background: #f1f1f1;
            margin-right: 5px;
            border: 1px solid #ccc;
        }
        .tabs-menu .active {
            background: #ccc;
        }
    </style>
    <script>
        function showTab(tabId) {
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tabs-menu div').forEach(tab => {
                tab.classList.remove('active');
            });
            document.getElementById(tabId).classList.add('active');
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('active');
        }
    </script>
</head>
<body>
    <h2>Admin Dashboard</h2>
    <div class="tabs-menu">
        <div data-tab="settings" class="active" onclick="showTab('settings')">Settings</div>
        <div data-tab="rules" onclick="showTab('rules')">Manage Rules</div>
    </div>

    <div id="settings" class="tab active">
        <h3>Settings</h3>
        <form action="/admin/settings" method="POST">
            <div>
                <label for="blockedCountries">Blocked Countries (comma separated):</label>
                <input type="text" name="blockedCountries" id="blockedCountries" value="<%= settings.blockedCountries.join(', ') %>">
            </div>
            <div>
                <label for="rateLimitWindowMs">Rate Limit Window (ms):</label>
                <input type="number" name="rateLimitWindowMs" id="rateLimitWindowMs" value="<%= settings.rateLimit.windowMs %>">
            </div>
            <div>
                <label for="rateLimitMaxRequests">Rate Limit Max Requests:</label>
                <input type="number" name="rateLimitMaxRequests" id="rateLimitMaxRequests" value="<%= settings.rateLimit.maxRequests %>">
            </div>
            <div>
                <label for="anomalyScoreThreshold">Anomaly Score Threshold:</label>
                <input type="number" name="anomalyScoreThreshold" id="anomalyScoreThreshold" value="<%= settings.anomalyScoreThreshold %>">
            </div>
            <div>
                <label for="blockedIPs">Blocked IPs (comma separated):</label>
                <input type="text" name="blockedIPs" id="blockedIPs" value="<%= settings.blockedIPs.join(', ') %>">
            </div>
            <div>
                <label for="whitelistedIPs">Whitelisted IPs (comma separated):</label>
                <input type="text" name="whitelistedIPs" id="whitelistedIPs" value="<%= settings.whitelistedIPs.join(', ') %>">
            </div>
            <button type="submit">Save Settings</button>
        </form>
    </div>

    <div id="rules" class="tab">
        <h3>Manage Rules</h3>
        <form action="/admin/rules" method="POST">
            <div>
                <label for="ruleName">Rule Name:</label>
                <input type="text" name="ruleName" id="ruleName" required>
            </div>
            <div>
                <label for="description">Description:</label>
                <input type="text" name="description" id="description">
            </div>
            <div>
                <label for="anomalyScore">Anomaly Score:</label>
                <input type="number" name="anomalyScore" id="anomalyScore">
            </div>
            <div>
                <label for="action">Action:</label>
                <select name="action" id="action" required>
                    <option value="block">Block</option>
                    <option value="allow">Allow</option>
                    <option value="monitor">Monitor</option>
                </select>
            </div>
            <button type="submit">Add Rule</button>
        </form>
        
        <h4>Existing Rules</h4>
        <ul>
            <% rules.forEach(rule => { %>
                <li><%= rule.name %>: <%= rule.description %> (Action: <%= rule.action %>, Anomaly Score: <%= rule.anomalyScore %>)</li>
            <% }) %>
        </ul>
    </div>

    <!-- Logout Button -->
    <form action="/admin/logout" method="POST" style="margin-top: 20px;">
        <button type="submit">Logout</button>
    </form>
</body>
</html>
